@model IEnumerable<PROG_Part2.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "FarmerProducts";
}
<h2>Farmer Products</h2>

@using (Html.BeginForm())
{
    <p>
        Select Farmer by ID: @Html.DropDownList("FarmerId", ViewBag.FarmerList as IEnumerable<SelectListItem>, "Select")
        <fieldset>
            @Html.Label("StartDate", "Start Date:")
            <input class="startdate" id="startdate" name="startdate" type="date">
            @Html.Label("enddate", "End Date:")
            <input class="startdate" id="enddate" name="enddate" type="date">
        </fieldset>
        <br />
        Find by Product Type: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
    <p>@ViewBag.Message</p>
}
<div>
    <table class="table">
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Type
            </th>
            <th>
                Date Supplied
            </th>
            <th>
                Farmer ID
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.ProductType
                </td>
                <td>
                    @item.DateSupplied
                </td>
                <td>
                    @item.FarmerId
                </td>
            </tr>
        }
    </table>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>